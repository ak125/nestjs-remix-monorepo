# Configuration Meilisearch
# ======================

# URL du serveur Meilisearch
MEILISEARCH_HOST=http://localhost:7700

# Clé API maître (obligatoire en production)
MEILISEARCH_MASTER_KEY=your_master_key_here

# Clé API publique pour les recherches (optionnel)
MEILISEARCH_PUBLIC_KEY=your_public_key_here

# Configuration des index
MEILISEARCH_VEHICLES_INDEX=vehicles
MEILISEARCH_PRODUCTS_INDEX=products

# Réglages de performance
MEILISEARCH_MAX_DOCUMENTS_PER_BATCH=1000
MEILISEARCH_SEARCH_TIMEOUT=5000

# Environnement (development, staging, production)
NODE_ENV=development

# Configuration Redis pour le cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
