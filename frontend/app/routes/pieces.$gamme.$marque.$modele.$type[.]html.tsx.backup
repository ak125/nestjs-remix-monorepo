/**
 * Convertit un slug en titre format√©
 */
function toTitleCaseFromSlug(slug: string): string {
  return slug
    .split('-')
    .map(word => word.charAt(0).toUpperCase() + word.slice(1))
    .join(' ');
}

/**
 * Parse les param√®tres d'URL avec IDs (format: nom-id ou nom-id-id)
 */
function parseUrlParam(param: string): {alias: string, id: number} {
  const parts = param.split('-');
  
  // Chercher le dernier nombre dans l'URL
  for (let i = parts.length - 1; i >= 0; i--) {
    const id = parseInt(parts[i]);
    if (!isNaN(id) && id > 0) {
      const alias = parts.slice(0, i).join('-');
      return { alias, id };
    }
  }
  
  // Fallback si pas d'ID trouv√©
  return { alias: param, id: 0 };
}

/**
 * Formatage intelligent des noms de gammes
 */
function formatGammeName(gamme: GammeData): string {
  // Mappings pour am√©liorer les noms techniques
  const nameMap: Record<string, string> = {
    'Courroie D Accessoire 10': 'Courroies d\'accessoires',
    'Courroie D Accessoire 90': 'Courroies d\'accessoires', 
    'Plaquette De Frein 402': 'Plaquettes de frein',
    'courroie-d-accessoire': 'Courroies d\'accessoires',
    'plaquette-de-frein': 'Plaquettes de frein',
    'disques-de-frein': 'Disques de frein',
    'filtres-a-huile': 'Filtres √† huile',
    'filtres-a-air': 'Filtres √† air',
    'kit-de-distribution': 'Kits de distribution',
    'amortisseurs': 'Amortisseurs',
    'freinage': 'Syst√®me de freinage'
  };
  
  // Utiliser le mapping s'il existe, sinon nettoyer le nom
  const mappedName = nameMap[gamme.name] || nameMap[gamme.alias];
  if (mappedName) return mappedName;
  
  // Nettoyage intelligent du nom pour les formats de base de donn√©es
  let cleanName = gamme.name;
  
  // Nettoyer les patterns courants de la base de donn√©es
  cleanName = cleanName
    .replace(/\b\d+\b/g, '') // Supprimer les nombres isol√©s
    .replace(/\s+/g, ' ') // Normaliser les espaces
    .replace(/\bDe\b/gi, 'de') // Corriger "De" en "de"
    .replace(/\bD\b/gi, 'd\'') // Corriger "D" en "d'"
    .trim();
  
  // Formatage sp√©cialis√© pour les pi√®ces automobiles
  const specialFormats: Record<string, string> = {
    'plaquette de frein': 'Plaquettes de frein',
    'courroie d accessoire': 'Courroies d\'accessoires',
    'disque de frein': 'Disques de frein',
    'filtre a huile': 'Filtres √† huile',
    'filtre a air': 'Filtres √† air',
    'kit de distribution': 'Kits de distribution'
  };
  
  const normalizedName = cleanName.toLowerCase();
  for (const [pattern, replacement] of Object.entries(specialFormats)) {
    if (normalizedName.includes(pattern)) {
      return replacement;
    }
  }
  
  // Formatage par d√©faut avec capitalisation
  return cleanName
    .split(' ')
    .map(word => word.charAt(0).toUpperCase() + word.slice(1).toLowerCase())
    .join(' ');
}

