{
  "name": "nestjs-remix-monorepo",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "turbo test",
    "dev": "turbo dev",
    "dev:core": "echo 'üöÄ DEV CORE - Modules essentiels uniquement' && turbo dev --filter=@fafa/backend --filter=@fafa/frontend",
    "dev:full:all": "echo 'üîß DEV FULL - Cockpit complet + workers' && turbo dev",
    "lint": "turbo lint",
    "build": "turbo build",
    "typecheck": "turbo typecheck",
    "start": "cd backend && npm run start",
    "clean-node-modules": "find . -type d -name 'node_modules' -exec rm -rf {} + && find . -name 'package-lock.json' -exec rm -f {} +",
    "clean-turbo-cache": "find . -name '.turbo' -type d -exec rm -rf {} +",
    "pipeline:full": "node scripts/mcp-orchestrator.js",
    "migrate:auto": "node scripts/auto-migrate.js",
    "audit:full": "node ../audit-migration-exhaustif.js",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish",
    "spec:validate": "turbo spec:validate && bash scripts/validate-specs.sh",
    "spec:generate": "turbo spec:generate && bash scripts/generate-specs.sh",
    "spec:report": "turbo spec:report && bash scripts/spec-report.sh",
    "docs:install": "cd .spec/docs && npm install",
    "docs:dev": "cd .spec/docs && npm start",
    "docs:build": "cd .spec/docs && npm run build",
    "dev:full": "echo '‚ö†Ô∏è Lancer dans 2 terminaux: 1) npm run dev (backend+frontend port 3000), 2) npm run docs:dev (portail port 3002)'",
    "prepare": "husky",
    "check:no-client-localhost": "bash scripts/check-no-client-localhost.sh"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "npm@10.8.2",
  "description": "",
  "workspaces": [
    "backend",
    "frontend",
    "packages/*"
  ],
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@nestjs/common": "^10.4.20",
    "@nestjs/core": "^10.4.20",
    "@remix-run/dev": "^2.17.4",
    "@types/bcrypt": "^6.0.0",
    "@types/file-type": "^10.9.3",
    "@types/multer": "^2.0.0",
    "depcheck": "^1.4.7",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "lint-staged": "^16.2.7",
    "prettier": "^3.4.1",
    "reflect-metadata": "^0.1.14",
    "rxjs": "^7.8.2",
    "turbo": "^2.2.3",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@remix-run/express": "^2.17.4",
    "@remix-run/node": "^2.17.4",
    "@remix-run/react": "^2.17.4",
    "@remix-run/serve": "^2.17.4",
    "@remix-run/server-runtime": "^2.17.4",
    "@supabase/supabase-js": "^2.83.0",
    "abort-controller": "^3.0.0",
    "autoprefixer": "^10.4.14",
    "bcrypt": "^6.0.0",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.3",
    "minimatch": "^5.1.6",
    "nestjs-zod": "^4.3.1",
    "node-fetch": "^3.3.2",
    "postcss": "^8.4.24",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "remix-flat-routes": "^0.8.5",
    "sharp": "^0.34.3",
    "swagger-ui-express": "^5.0.1",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^3.4.15",
    "uid": "^2.0.2",
    "vite": "^5.4.11",
    "zod": "^3.25.76"
  },
  "overrides": {
    "path-to-regexp": "3.3.0",
    "zod": "^3.25.76",
    "@conform-to/react": "^1.13.1",
    "@conform-to/zod": "^1.13.1"
  },
  "lint-staged": {
    "frontend/app/**/*.{ts,tsx}": [
      "eslint --fix --max-warnings=0",
      "prettier --write"
    ],
    "backend/src/**/*.ts": [
      "NODE_OPTIONS='--max-old-space-size=4096' eslint --fix",
      "prettier --write"
    ]
  }
}
