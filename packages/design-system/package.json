{
  "name": "@monorepo/design-system",
  "version": "1.0.0",
  "description": "Design System industrialisé pour NestJS-Remix Monorepo - Tokens, Thèmes, UI, Patterns",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "style": "./dist/styles/globals.css",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "default": "./dist/index.mjs"
    },
    "./tokens": {
      "types": "./dist/tokens/index.d.ts",
      "import": "./dist/tokens/index.mjs",
      "require": "./dist/tokens/index.cjs",
      "default": "./dist/tokens/index.mjs"
    },
    "./tokens/*": {
      "types": "./dist/tokens/*.d.ts",
      "import": "./dist/tokens/*.mjs",
      "require": "./dist/tokens/*.cjs",
      "default": "./dist/tokens/*.mjs"
    },
    "./themes": {
      "types": "./dist/themes/index.d.ts",
      "import": "./dist/themes/index.mjs",
      "require": "./dist/themes/index.cjs",
      "default": "./dist/themes/index.mjs"
    },
    "./themes/*": {
      "types": "./dist/themes/*.d.ts",
      "import": "./dist/themes/*.mjs",
      "require": "./dist/themes/*.cjs",
      "default": "./dist/themes/*.mjs"
    },
    "./components": {
      "types": "./dist/components/index.d.ts",
      "import": "./dist/components/index.mjs",
      "require": "./dist/components/index.cjs",
      "default": "./dist/components/index.mjs"
    },
    "./components/*": {
      "types": "./dist/components/*.d.ts",
      "import": "./dist/components/*.mjs",
      "require": "./dist/components/*.cjs",
      "default": "./dist/components/*.mjs"
    },
    "./patterns": {
      "types": "./dist/patterns/index.d.ts",
      "import": "./dist/patterns/index.mjs",
      "require": "./dist/patterns/index.cjs",
      "default": "./dist/patterns/index.mjs"
    },
    "./patterns/*": {
      "types": "./dist/patterns/*.d.ts",
      "import": "./dist/patterns/*.mjs",
      "require": "./dist/patterns/*.cjs",
      "default": "./dist/patterns/*.mjs"
    },
    "./styles": "./dist/styles/globals.css"
  },
  "typesVersions": {
    "*": {
      "tokens": ["dist/tokens/index.d.ts"],
      "tokens/*": ["dist/tokens/*.d.ts"],
      "themes": ["dist/themes/index.d.ts"],
      "themes/*": ["dist/themes/*.d.ts"],
      "components": ["dist/components/index.d.ts"],
      "components/*": ["dist/components/*.d.ts"],
      "patterns": ["dist/patterns/index.d.ts"],
      "patterns/*": ["dist/patterns/*.d.ts"],
      "*": ["dist/index.d.ts"]
    }
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md"
  ],
  "sideEffects": [
    "dist/styles/**"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "npm run tokens:build && tsup",
    "typecheck": "tsc -p tsconfig.build.json --noEmit",
    "lint": "eslint src --ext ts,tsx",
    "lint:fix": "eslint src --ext ts,tsx --fix",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:sanity": "vitest run src/tests/sanity.test.ts",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "tokens:build": "node scripts/build-tokens.js",
    "a11y": "storybook --test-runner",
    "validate": "bash scripts/validate.sh",
    "prepack": "npm run build",
    "clean": "rm -rf dist .turbo node_modules/.cache"
  },
  "peerDependencies": {
    "react": "^18.2.0 || ^19.0.0",
    "react-dom": "^18.2.0 || ^19.0.0"
  },
  "peerDependenciesMeta": {
    "react": { "optional": false },
    "react-dom": { "optional": false }
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.2.2",
    "@radix-ui/react-alert-dialog": "^1.1.4",
    "@radix-ui/react-avatar": "^1.1.4",
    "@radix-ui/react-checkbox": "^1.1.6",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.4",
    "@radix-ui/react-label": "^2.1.4",
    "@radix-ui/react-popover": "^1.1.4",
    "@radix-ui/react-radio-group": "^1.2.4",
    "@radix-ui/react-select": "^2.1.4",
    "@radix-ui/react-separator": "^1.1.4",
    "@radix-ui/react-slider": "^1.2.4",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.1.4",
    "@radix-ui/react-tabs": "^1.1.4",
    "@radix-ui/react-toast": "^1.2.4",
    "@radix-ui/react-tooltip": "^1.1.8",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.462.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@fafa/typescript-config": "*",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.15",
    "@storybook/addon-a11y": "^8.4.7",
    "@storybook/addon-essentials": "^8.4.7",
    "@storybook/addon-interactions": "^8.4.7",
    "@storybook/addon-links": "^8.4.7",
    "@storybook/blocks": "^8.4.7",
    "@storybook/react": "^8.4.7",
    "@storybook/react-vite": "^8.4.7",
    "@storybook/test": "^8.4.7",
    "@storybook/test-runner": "^0.20.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/ui": "^2.1.8",
    "axe-core": "^4.10.2",
    "axe-playwright": "^2.0.3",
    "eslint": "^8.57.1",
    "jsdom": "^25.0.1",
    "storybook": "^8.4.7",
    "tsup": "^8.3.5",
    "typescript": "^5.6.3",
    "vite": "^5.4.11",
    "vitest": "^2.1.8"
  },
  "keywords": [
    "design-system",
    "react",
    "typescript",
    "tailwindcss",
    "shadcn-ui",
    "tokens",
    "themes",
    "storybook",
    "remix",
    "nestjs"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "npm@10.9.0",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
