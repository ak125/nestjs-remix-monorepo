{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
      "dev": {
        "cache": false,
        "persistent": true
      },
      "build": {
        "outputs": ["backend/dist/**", "frontend/build/**", "packages/*/dist/**"],
        "dependsOn": ["^build"]
      },
      "typecheck": {
        "dependsOn": ["^build"]
      },
      "lint": {
        "cache": false
      }
    }
  }