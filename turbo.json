{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
      "dev": {
        "cache": false,
        "persistent": true
      },
      "build": {
        "outputs": ["backend/dist/**", "frontend/build/**", "packages/*/dist/**"],
        "dependsOn": ["^build"]
      },
      "typecheck": {
        "dependsOn": ["^build"]
      },
      "lint": {
        "cache": false
      },
      "spec:validate": {
        "cache": false,
        "outputs": [".spec/reports/**"]
      },
      "spec:generate": {
        "cache": false,
        "outputs": [".spec/**/*.md", ".spec/**/*.yaml", ".spec/**/*.ts"]
      },
      "spec:report": {
        "cache": false,
        "outputs": [".spec/reports/**"]
      }
    }
  }