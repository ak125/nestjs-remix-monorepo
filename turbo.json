{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
      "dev": {
        "cache": false,
        "persistent": true
      },
      "build": {
        "outputs": ["dist/**", "build/**"],
        "dependsOn": ["^build"]
      },
      "typecheck": {
        "dependsOn": ["^build"],
        "outputs": []
      },
      "lint": {
        "outputs": []
      },
      "test": {
        "dependsOn": ["^build"],
        "outputs": ["coverage/**"]
      },
      "spec:validate": {
        "cache": false,
        "outputs": [".spec/reports/**"]
      },
      "spec:generate": {
        "cache": false,
        "outputs": [".spec/**/*.md", ".spec/**/*.yaml", ".spec/**/*.ts"]
      },
      "spec:report": {
        "cache": false,
        "outputs": [".spec/reports/**"]
      }
    }
  }